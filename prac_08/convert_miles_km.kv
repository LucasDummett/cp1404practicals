BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_miles
            font_size: 48
            on_text: app.handle_distance_conversion()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_distance_conversion(input_miles.text)
    Label:
        id: output_label
        text: app.output_km
        font_size: 48
        color: (1, 1, 0, 1)
